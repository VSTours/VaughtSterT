---
export interface Props {
  title: string;
  description?: string;
}

import '../styles/global.css';

const { title, description = "Experience South Africa like a local. Bespoke private tours of Cape Town, Wine Country, and beyond. Curated by someone who knows every hidden gem." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <title>{title} | Vaughn Sterling Tours</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={`${title} | Vaughn Sterling Tours`} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`${Astro.site}og-image.jpg`} />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet" />
  <!-- global.css is imported via `import '../styles/global.css'` at the top -->
</head>
<body class="bg-white text-gray-900 antialiased">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <a href="/" class="flex items-center gap-3">
          <div class="w-12 h-12 bg-gradient-to-br from-navy to-sa-blue rounded-lg flex items-center justify-center">
            <span class="text-gold font-black text-2xl">V</span>
          </div>
          <div>
            <div class="font-serif text-xl font-bold bg-gradient-to-r from-navy to-sa-blue bg-clip-text text-transparent">
              Vaughn Sterling
            </div>
            <div class="text-xs text-gray-600 -mt-1">Bespoke South African Experiences</div>
          </div>
        </a>
        
        <div class="hidden md:flex items-center gap-8">
          <a href="/services" class="text-gray-700 hover:text-navy transition-colors font-medium">Experiences</a>
          <a href="/about" class="text-gray-700 hover:text-navy transition-colors font-medium">About Vaughn</a>
          <a href="/gallery" class="text-gray-700 hover:text-navy transition-colors font-medium">Gallery</a>
          <a href="/faq" class="text-gray-700 hover:text-navy transition-colors font-medium">FAQ</a>
          <a href="/contact" class="px-6 py-2.5 bg-gradient-to-r from-navy to-sa-blue text-white rounded-lg font-semibold hover:shadow-lg transition-all">
            Book Now
          </a>
        </div>
        
        <button id="mobile-menu-button" class="md:hidden p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
      <div class="px-4 py-4 space-y-3">
        <a href="/services" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg">Experiences</a>
        <a href="/about" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg">About Vaughn</a>
        <a href="/gallery" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg">Gallery</a>
        <a href="/faq" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg">FAQ</a>
        <a href="/contact" class="block px-4 py-2 bg-navy text-white rounded-lg text-center font-semibold">Book Now</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="pt-20">
    <slot />
  </main>

  <!-- WhatsApp Float Button -->
  <a 
    href="https://wa.me/639202468178?text=Hi%20Vaughn,%20I'm%20interested%20in%20booking%20a%20tour" 
    target="_blank"
    class="fixed bottom-6 right-6 z-40 w-14 h-14 bg-green-500 hover:bg-green-600 rounded-full shadow-2xl flex items-center justify-center transition-all hover:scale-110 group"
    aria-label="Contact via WhatsApp"
  >
    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
