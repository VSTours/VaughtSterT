              <img 
                src={exp.image} 
                alt={exp.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-navy mb-2 group-hover:text-gold transition-colors">
                {exp.title}
              </h3>
              <div class="text-2xl font-black text-gold mb-4">
                {exp.price}
              </div>
              <ul class="space-y-2">
                {exp.features.map(feature => (
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <svg class="w-4 h-4 text-gold flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
