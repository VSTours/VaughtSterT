          {
            title: 'Garden Route',
            price: 'R15,000/day',
            image: '/gardenroute-1.jpg',
            features: ['Coastal Drives', 'Wildlife', 'Adventure', 'Multi-day Options']
          },
          {
            title: 'Executive Package',
            price: 'R20,000/3 days',
            image: '/executive-1.jpg',
            features: ['Full Concierge', 'Luxury Stays', 'Business Support', 'Discretion']
          }
        ].map(exp => (
          <a href="/services" class="group block bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2">
