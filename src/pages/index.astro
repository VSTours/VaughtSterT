---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/capetown-hero.jpg" 
        alt="Cape Town and Table Mountain"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
      <h1 class="font-serif text-5xl md:text-7xl font-black mb-6 leading-tight">
        Experience <span class="text-gold">South Africa</span><br/>
        Like a Local
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto">
        Bespoke private tours of Cape Town, Wine Country, and beyond. 
        Curated by someone who knows every hidden gem.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/services" class="px-8 py-4 bg-gradient-to-r from-gold to-sa-gold text-navy font-bold rounded-lg hover:shadow-2xl transition-all transform hover:scale-105">
          View Experiences
        </a>
        <a href="/contact" class="px-8 py-4 bg-white/10 backdrop-blur border-2 border-white/30 text-white font-bold rounded-lg hover:bg-white/20 transition-all">
          Book a Consultation
        </a>
      </div>
      
      <!-- Trust Indicators */}
      <div class="mt-12 flex flex-wrap items-center justify-center gap-8 text-sm text-gray-300">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Private & Personal</span>
        </div>
