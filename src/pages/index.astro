      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          {
            title: 'Cape Town Essentials',
            price: 'R8,000/day',
            image: '/cape-town-1.jpg',
            features: ['Table Mountain', 'V&A Waterfront', 'Camps Bay', 'Fine Dining']
          },
          {
            title: 'Winelands Experience',
            price: 'R12,000/day',
            image: '/winecountry-1.jpg',
