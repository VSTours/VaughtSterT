---
import Layout from '../layouts/Layout.astro';

const packages = [
  {
    id: 'cape-town',
    name: 'Cape Town Essentials',
    price: 'R8,000',
    duration: 'Full Day',
    image: '/cape-town-1.jpg',
    description: 'Experience the Mother City\'s most iconic locations with insider access and local knowledge.',
    included: [
      'Table Mountain sunrise experience',
      'V&A Waterfront hidden gems',
      'Camps Bay sunset & cocktails',
      'Fine dining at exclusive restaurant',
      'Premium transport throughout',
      'Professional photography',
      'Flexible itinerary',
      'Personal guide (Vaughn)'
    ],
    ideal: 'First-time visitors, couples, photography enthusiasts'
  },
  {
    id: 'winelands',
    name: 'Winelands Experience',
    price: 'R12,000',
    duration: 'Full Day',
    image: '/winecountry-1.jpg',
    description: 'Discover South Africa\'s world-class wine country with exclusive estate access and gourmet experiences.',
    included: [
      'Private wine estate tours (3-4 estates)',
      'Exclusive tastings with winemakers',
      'Gourmet lunch at Delaire Graff or similar',
      'Franschhoek village exploration',
      'Cheese & charcuterie pairings',
      'Hot air balloon option (+R3,000)',
      'Luxury transport',
      'Personal sommelier guide'
    ],
    ideal: 'Wine lovers, foodies, romantic getaways'
  },
  {
    id: 'garden-route',
    name: 'Garden Route Adventure',
    price: 'R15,000',
    duration: 'Full Day (Multi-day available)',
    image: '/gardenroute-1.jpg',
    description: 'Explore South Africa\'s stunning coastline with wilderness activities and luxury accommodation.',
    included: [
      'Scenic coastal drives',
      'Wildlife encounters (dolphins, whales)',
      'Wilderness activities (hiking, kayaking)',
      'Luxury lodge accommodation',
      'Local culinary experiences',
      'Adventure photography',
      'Flexible multi-day itineraries',
      'All equipment provided'
    ],
    ideal: 'Adventure seekers, nature lovers, photographers'
  },
  {
    id: 'executive',
    name: 'Executive Companion Package',
    price: 'R20,000',
    duration: '3 Days',
    image: '/executive-1.jpg',
    description: 'Comprehensive concierge service with professional companionship for business or leisure.',
    included: [
      'Business conference attendance',
      'Professional companionship & networking',
      'Cultural translation & local insights',
      'Restaurant & entertainment reservations',
      'Full concierge service',
      'Discretion guaranteed',
      'Luxury accommodation arrangements',
      '24/7 availability during stay'
    ],
    ideal: 'Business executives, VIP travelers, extended stays'
  }
];
---

<Layout title="Experiences & Packages">
  <!-- Hero -->
  <section class="relative h-96 bg-navy flex items-center justify-center">
    <div class="absolute inset-0">
      <img 
        src="/services-hero.jpg"
        alt="South Africa experiences"
        class="w-full h-full object-cover opacity-30"
      />
    </div>
    <div class="relative z-10 text-center text-white px-4">
      <h1 class="font-serif text-5xl md:text-6xl font-black mb-4">
        Bespoke <span class="text-gold">Experiences</span>
      </h1>
      <p class="text-xl max-w-2xl mx-auto">
        Each journey is tailored to your desires. These packages are starting points for your perfect South African adventure.
      </p>
    </div>
  </section>

  <!-- Packages -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {packages.map((pkg, index) => (
          <div id={pkg.id} class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-8 lg:gap-12 items-center scroll-mt-24`}>
            {/* Image */}
            <div class="w-full lg:w-1/2">
              <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
                <img 
                  src={pkg.image}
                  alt={pkg.name}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            </div>
            
            {/* Content */}
            <div class="w-full lg:w-1/2">
              <div class="inline-block px-4 py-2 bg-gold/10 text-gold font-semibold rounded-full mb-4">
                {pkg.duration}
              </div>
              
              <h2 class="font-serif text-4xl font-black text-navy mb-4">
                {pkg.name}
              </h2>
              
              <div class="text-4xl font-black text-gold mb-6">
                {pkg.price}
              </div>
              
              <p class="text-lg text-gray-700 mb-6 leading-relaxed">
                {pkg.description}
              </p>
              
              <div class="mb-6">
                <h3 class="font-bold text-navy mb-3">What's Included:</h3>
                <ul class="grid sm:grid-cols-2 gap-3">
                  {pkg.included.map(item => (
                    <li class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="p-4 bg-gray-50 rounded-lg mb-6">
                <p class="text-sm text-gray-600">
                  <strong class="text-navy">Ideal for:</strong> {pkg.ideal}
                </p>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/contact" class="px-6 py-3 bg-gradient-to-r from-navy to-sa-blue text-white font-bold rounded-lg hover:shadow-xl transition-all text-center">
                  Book This Experience
                </a>
                <a href="/contact" class="px-6 py-3 bg-white border-2 border-navy text-navy font-bold rounded-lg hover:bg-gray-50 transition-all text-center">
                  Customize Package
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Add-ons -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-black text-navy mb-4">
          Enhance Your Experience
        </h2>
        <p class="text-xl text-gray-600">
          Optional add-ons to make your journey even more special
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {[
          { name: 'Hot Air Balloon Ride', price: 'R3,000', desc: 'Sunrise flight over wine country' },
          { name: 'Professional Photoshoot', price: 'R2,500', desc: '2-hour session, edited photos' },
          { name: 'Helicopter Tour', price: 'R5,000', desc: '20-minute aerial Cape Town tour' },
          { name: 'Private Chef Dinner', price: 'R4,000', desc: 'In-villa 5-course meal' },
          { name: 'Spa Day', price: 'R3,500', desc: 'Full-day luxury spa experience' },
          { name: 'Shark Cage Diving', price: 'R2,800', desc: 'Great white shark experience' }
        ].map(addon => (
          <div class="p-6 bg-white rounded-xl border-2 border-gray-200 hover:border-gold transition-all">
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-bold text-navy">{addon.name}</h3>
              <span class="text-2xl font-black text-gold">{addon.price}</span>
            </div>
            <p class="text-gray-600 text-sm">{addon.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Booking CTA -->
  <section class="py-20 bg-navy text-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-serif text-4xl font-black mb-4">
        Create Your Perfect Journey
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Every experience is customizable. Let's discuss what you're looking for.
      </p>
      <a href="/contact" class="inline-block px-8 py-4 bg-gradient-to-r from-gold to-sa-gold text-navy font-bold rounded-lg hover:shadow-2xl transition-all transform hover:scale-105">
        Start Planning
      </a>
    </div>
  </section>
</Layout>
