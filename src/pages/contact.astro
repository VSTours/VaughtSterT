---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact & Booking">
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="font-serif text-5xl font-black text-navy mb-4">
          Let's Plan Your <span class="text-gold">Journey</span>
        </h1>
        <p class="text-xl text-gray-600">
          Fill out the form below or reach out directly via WhatsApp
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white p-8 rounded-2xl shadow-xl border-2 border-gray-100">
          <h2 class="text-2xl font-bold text-navy mb-6">Booking Inquiry</h2>
          
          <form id="booking-form" action="/api/contact" method="POST" class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-semibold text-gray-900 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                  placeholder="John"
                />
              </div>

              <div>
                <label for="lastName" class="block text-sm font-semibold text-gray-900 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-900 mb-2">
                Phone Number (WhatsApp preferred)
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                placeholder="+1 234 567 8900"
              />
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="visitDates" class="block text-sm font-semibold text-gray-900 mb-2">
                  Planned Visit Dates
                </label>
                <input
                  type="text"
                  id="visitDates"
                  name="visitDates"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                  placeholder="e.g., March 15-20, 2024"
                />
              </div>

              <div>
                <label for="guests" class="block text-sm font-semibold text-gray-900 mb-2">
                  Number of Guests
                </label>
                <select
                  id="guests"
                  name="guests"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
                >
                  <option value="">Select...</option>
                  <option value="1">Just me</option>
                  <option value="2">2 guests</option>
                  <option value="3-4">3-4 guests</option>
                  <option value="5+">5+ guests</option>
                </select>
              </div>
            </div>

            <div>
              <label for="package" class="block text-sm font-semibold text-gray-900 mb-2">
                Experience Interest *
              </label>
              <select
                id="package"
                name="package"
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
              >
                <option value="">Select an experience...</option>
                <option value="cape-town">Cape Town Essentials (R8,000/day)</option>
                <option value="winelands">Winelands Experience (R12,000/day)</option>
                <option value="garden-route">Garden Route Adventure (R15,000/day)</option>
                <option value="executive">Executive Companion Package (R20,000/3 days)</option>
                <option value="custom">Custom Itinerary</option>
                <option value="consultation">Just Want to Discuss Options</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
                Tell Me About Your Dream Experience *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all resize-none"
                placeholder="What are you hoping to experience in South Africa? Any special interests, dietary requirements, or requests?"
              ></textarea>
            </div>

            <div>
              <label for="referral" class="block text-sm font-semibold text-gray-900 mb-2">
                How did you hear about us?
              </label>
              <select
                id="referral"
                name="referral"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-gold focus:ring-2 focus:ring-gold/20 outline-none transition-all"
              >
                <option value="">Select...</option>
                <option value="referral">Friend/Referral</option>
                <option value="google">Google Search</option>
                <option value="instagram">Instagram</option>
                <option value="tripadvisor">TripAdvisor</option>
                <option value="other">Other</option>
              </select>
            </div>

            <button
              type="submit"
              class="w-full py-4 bg-gradient-to-r from-navy to-sa-blue text-white font-bold rounded-lg hover:shadow-2xl transition-all transform hover:scale-105"
            >
              Send Inquiry
            </button>

            <p class="text-sm text-gray-500 text-center">
              I'll respond within 24 hours with availability and next steps
            </p>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Direct Contact -->
          <div class="bg-gradient-to-br from-navy to-sa-blue p-8 rounded-2xl text-white">
            <h3 class="text-2xl font-bold mb-6">Prefer to Chat Directly?</h3>
            
            <div class="space-y-4">
              <a href="https://wa.me/639202468178?text=Hi%20Vaughn,%20I'm%20interested%20in%20booking%20a%20tour" target="_blank" class="flex items-center gap-4 p-4 bg-white/10 backdrop-blur rounded-lg hover:bg-white/20 transition-all group">
                <div class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                  <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-lg">WhatsApp</div>
                  <div class="text-sm text-white/80">Fastest response â€¢ Available 9AM-9PM SAST</div>
                </div>
              </a>

              <a href="mailto:vaughn@vaughnsterlingtours.com" class="flex items-center gap-4 p-4 bg-white/10 backdrop-blur rounded-lg hover:bg-white/20 transition-all group">
                <div class="w-14 h-14 bg-gold rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                  <svg class="w-8 h-8 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12h-1M16 16v-4a4 4 0 10-8 0v4M8 20h8a2 2 0 002-2v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2c0 1.104.896 2 2 2z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-lg">Email</div>
                  <div class="text-sm text-white/80">vaughn@vaughnsterlingtours.com</div>
                </div>
              </a>
            </div>
          </div>

          <div class="p-8 bg-white rounded-2xl border-2 border-gray-100">
            <h3 class="text-2xl font-bold text-navy mb-6">Details & Policies</h3>
            <ul class="space-y-3 text-gray-700">
              <li><strong>Response time:</strong> Within 24 hours</li>
              <li><strong>Booking policy:</strong> 50% deposit to confirm booking</li>
              <li><strong>Cancellation:</strong> Full refund if cancelled 7+ days before; 50% for 3-7 days</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    (function () {
      const form = document.getElementById('booking-form');
      if (!form) return;
      const statusEl = document.createElement('div');
      statusEl.className = 'mt-4 text-center text-sm';
      form.appendChild(statusEl);

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        statusEl.textContent = 'Sending...';
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData.entries());
        try {
          const res = await fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });
          if (res.ok) {
            statusEl.textContent = 'Thanks! Your inquiry was sent. I will respond within 24 hours.';
            form.reset();
          } else {
            const txt = await res.text();
            statusEl.textContent = 'Error: ' + (txt || res.statusText);
          }
        } catch (err) {
          statusEl.textContent = 'Request failed. Please try again or contact via WhatsApp.';
        }
      });
    })();
  </script>
</Layout>
